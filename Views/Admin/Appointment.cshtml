@model  Appointment


<div class="bg-info text-white p-2 d-flex justify-content-between">
    <h4>Admin</h4>
    <div class="d-flex">
        <div>
            <a class="nav-link text-white" asp-controller="Admin" asp-action="ViewAppointments">Appointments</a>
            
        </div>
    </div>
</div>



<form method="post" asp-controller="Admin" asp-action="Edit">

    <div class="form-group">
        <label asp-for="Date">Date: @Model.Date </label>
        <input class="form-control" type="hidden" />
    </div>
    @*<div class="form-group">
        <label asp-for="Available">Available:</label>
        <input asp-for="Available" class="form-control" />
    </div>*@
    <div class="form-group">
        <label asp-for="GroupName">Group Name: </label>
        <input asp-for="GroupName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="GroupSize">Group Size: </label>
        <input asp-for="GroupSize" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email: </label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone: </label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="Available" class="form-control" value="True" type="hidden" />
    </div>
    <div class="float-end">


        <input class="btn btn-primary" type="submit" value="Save Appointment" />

    </div>
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="AppointmentId" />
</form>

