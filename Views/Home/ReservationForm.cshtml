@{
}

@model Appointment

<h2>Reserve your timeslot now</h2>
<p>Please enter your information to ensure your reservation is saved</p>

<form method="post" asp-controller="Appointment" asp-action="Reservation">
    @*This date needs to be pulled from the other page and printed*@
    <div class="form-group">
        <label asp-for="Date">Date: @Model.Date </label>
        <input class="form-control" type="hidden" />
    </div>
    <div class="form-group">
        <label asp-for="AppointmentId">@Model.AppointmentId </label>
        <input class="form-control" type="hidden" />
    </div>
    <div class="form-group">
        <label asp-for="GroupName">Group Name: </label>
        <input asp-for="GroupName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="GroupSize">Group Size: </label>
        <input asp-for="GroupSize" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email: </label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone: </label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="Available" class="form-control" value="True" type="hidden" />
    </div>
    <div class="float-end">
        <input class="btn btn-primary" type="submit" value="Reserve Appointment" />
    </div>
    <div asp-validation-summary="All"></div>
</form>



